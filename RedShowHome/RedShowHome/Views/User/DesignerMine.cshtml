<div class="easyui-layout" style="width: 100%; height: 800px;">
        
    <div data-options="region:'west'" style="width: 30%; padding: 10px">
        <div style="padding: 5px 10px 5px 10px;margin-bottom: 20px">
            <a id="btnGetDemands" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-man'" style="width: 100%; height: 100px; background-color: yellowgreen">需求检索</a>
        </div>
        <div id="alertDiv" class="alertPanel"></div>
        <div id="r-result"></div>
    </div>
    <div data-options="region:'center'" >
        <div id="allmap"></div>
    </div>
</div>
<script type="text/javascript">
    var map;
    var point;
    var currentPoint;
    $(function () {
        map = new BMap.Map("allmap");
        point = new BMap.Point(RSH.Common.NEFU_Longitude, RSH.Common.NEFU_Latitude);
        InitMap(map, point);

        $("#btnGetDemands").bind('click', function () {
            var url = "/Demand/GetAllDemandsInSameCity";
            doSearchFromDBInSameCity(map, url);
        });
    });
</script>
