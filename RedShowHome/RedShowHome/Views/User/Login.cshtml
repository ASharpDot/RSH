@{
    ViewBag.Title = "登录";
}

<div style="margin: 20px 0;">
    <div class="easyui-panel" style="width: 400px; padding: 50px 60px">
        <div style="margin-bottom: 20px">
            <label class="label-top">登录邮箱：</label>
            <input class="easyui-textbox" prompt="请输入邮箱..." iconwidth="28" style="width: 100%; height: 34px; padding: 10px;" data-options="required:true,validType:'email'">
        </div>
        <div style="margin-bottom: 20px">
            <label class="label-top">登录密码：</label>
            <input id="pass" class="easyui-passwordbox" prompt="请输入密码..." iconwidth="28" style="width: 100%; height: 34px; padding: 10px" data-options="required:true">
        </div>
        <div style="padding: 5px 0;">
            <a href="/User/Check" class="easyui-linkbutton" data-options="iconCls:'icon-man'" style="width: 80px"> 登录 </a>
        </div>
    </div>
</div>

