@{
    ViewBag.Title = "登录";
}

<div style="margin: 20px 0;">
    <div class="easyui-panel" style="width: 400px; padding: 50px 60px">
        <div style="margin-bottom: 20px">
            <label class="label-top">登录邮箱：</label>
            <input id="loginEmail"class="easyui-textbox" prompt="请输入邮箱..." iconwidth="28" style="width: 100%; height: 34px; padding: 10px;" data-options="required:true,validType:'email'">
        </div>
        <div style="margin-bottom: 20px">
            <label class="label-top">登录密码：</label>
            <input id="loginPassword" class="easyui-passwordbox" prompt="请输入密码..." iconwidth="28" style="width: 100%; height: 34px; padding: 10px" data-options="required:true">
        </div>
        <div style="padding: 5px 0;">
            <a id="btnLogin" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-man'" style="width: 80px"> 登录 </a>
            <a href="/User/Register" style="color: blue">还未注册？</a>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function() {
        $("#btnLogin").bind('click', function () {
            var loginEmail = $("#loginEmail").val();
            var loginPassword = $("#loginPassword").val();
            $.ajax({
                type: "post",
                url: "/User/Check",
                data: { LoginEmail: loginEmail, LoginPassword: loginPassword },
                dataType: "json",
                success: function(newUrl) {
                    window.location.href = newUrl;
                },
                error: function(data) {
                    $.messager.alert(RSH.Common.AlertTitle, RSH.Login.LoginFail);
                }
            });
        });
    });
</script>